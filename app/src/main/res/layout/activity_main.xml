<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="261dp"
        android:layout_height="206dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.085"
        app:srcCompat="@drawable/ic_launcher_background"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btnImageSelect"
        android:layout_width="346dp"
        android:layout_height="71dp"
        android:text="Image Select"
        app:layout_constraintBottom_toBottomOf="@id/btnUpload"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.150" />

    <Button
        android:id="@+id/btnUpload"
        android:layout_width="346dp"
        android:layout_height="71dp"
        android:text="Upload Now"
        app:layout_constraintBottom_toBottomOf="@id/btnLocalStoragePermission"
        app:layout_constraintEnd_toEndOf="@+id/btnImageSelect"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnImageSelect"
        app:layout_constraintTop_toBottomOf="@+id/btnImageSelect"
        app:layout_constraintVertical_bias="0.150" />

    <Button
        android:id="@+id/btnCameraOpen"
        android:layout_width="346dp"
        android:layout_height="71dp"
        android:text="Camera Open"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnUpload"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnUpload"
        app:layout_constraintTop_toBottomOf="@+id/btnLocalStoragePermission"
        app:layout_constraintVertical_bias="0.150" />

    <Button
        android:id="@+id/btnLocalStoragePermission"
        android:layout_width="346dp"
        android:layout_height="71dp"
        android:text="Storage Permission"
        app:layout_constraintBottom_toBottomOf="@id/btnCameraOpen"
        app:layout_constraintEnd_toEndOf="@+id/btnCameraOpen"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnCameraOpen"
        app:layout_constraintTop_toBottomOf="@+id/btnUpload"
        app:layout_constraintVertical_bias="0.150" />
</androidx.constraintlayout.widget.ConstraintLayout>